<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <declare-styleable name="TagCloudView">
        <attr name="autoScrollMode">
            <enum name="disable" value="0"/>
            <enum name="decelerate" value="1"/>
            <enum name="uniform" value="2"/>
        </attr>
        <attr name="manualScroll" format="boolean"/>
        <attr name="radiusPercent" format="float"/>
        <attr name="scrollSpeed" format="float"/>
        <attr name="lightColor" format="color"/>
        <attr name="darkColor" format="color"/>
        <attr name="startAngleX" format="float"/>
        <attr name="startAngleY" format="float"/>
    </declare-styleable>
    <declare-styleable name="DayRigisterLayout">
        <attr name="isDayRegisterPop" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="TextViewSwitcher">
        <attr name="flipDuration" format="integer"/>
        <attr name="flipInterval" format="integer"/>
        <attr name="autoStart" format="boolean"/>
        <attr name="inAnimation" format="reference"/>
        <attr name="outAnimation" format="reference"/>
    </declare-styleable>

    <declare-styleable name="RegularHexagonView">
        <attr name="viewCountNum" format="integer"/>
    </declare-styleable>
</resources>
