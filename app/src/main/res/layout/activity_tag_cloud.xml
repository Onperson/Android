<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_tag_cloud_bg">
    <com.fenjiread.learner.activity.widget.tagcloudview.TagCloudView
        android:id="@+id/tcv_tag_cloud_view"
        android:layout_width="345dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:clickable="true"
        android:focusable="true"
        app:autoScrollMode="uniform"
        app:darkColor="@color/colorPrimaryDark"
        app:lightColor="@color/green_9c"
        app:radiusPercent="0.78"
        app:scrollSpeed="4" />
    </RelativeLayout>
</RelativeLayout>