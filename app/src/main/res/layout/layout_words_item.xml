<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_collect_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="凤毛菱角"
        android:textColor="#fff29f87"
        android:textSize="14sp"/>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_words_energy"
        android:layout_width="35dp"
        android:layout_height="20dp"
        android:text="+6"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_collect_word"
        app:layout_constraintLeft_toLeftOf="@+id/tv_collect_word"
        app:layout_constraintRight_toRightOf="@+id/tv_collect_word"
        android:background="@drawable/bg_collect_words_r10"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="14sp"/>
</android.support.constraint.ConstraintLayout>