<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/trans"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_tag_cloud_tips"
        android:layout_width="@dimen/dp_53"
        android:layout_height="32dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/dp_5"
        android:background="@drawable/ic_word_tips_bg">
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="词能+57"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffe7a28c"
            android:textSize="@dimen/sp_6"
            android:layout_marginTop="@dimen/dp_5"/>
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="凤毛麟角"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffe7a28c"
            android:textSize="@dimen/sp_7"/>
    </LinearLayout>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_tag_cloud_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="词云标签"
        android:textSize="@dimen/sp_4"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"/>
    <View
        android:id="@+id/view_tag_dat"
        android:layout_width="@dimen/dp_5"
        android:layout_height="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/tag_cloud_dat"/>
</LinearLayout>